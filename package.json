{
  "name": "deel-task",
  "version": "1.0.0",
  "description": "A repository containing a home task for Backend Engineer interview at Deel.",
  "author": "Andrews Santiago",
  "private": true,
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed": "ts-node-dev src/scripts/seedDb.ts",
    "test:unit": "jest -c jest.config.unit.ts",
    "test:integration": "jest -c jest.config.integration.ts --runInBand --detectOpenHandles --forceExit",
    "test:coverage": "npm run test:unit -- --coverage",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "joi": "17.13.3",
    "sequelize": "^6.32.1",
    "sequelize-cli": "^6.6.0",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.4.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.14",
    "@types/joi": "^17.2.3",
    "@types/md5": "^2.3.2",
    "@types/node": "^22.14.1",
    "@types/sequelize": "^4.28.15",
    "@types/supertest": "^6.0.3",
    "commitizen": "^4.3.0",
    "concurrently": "^8.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-security": "^3.0.0",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "nodemon": "^3.1.9",
    "prettier": "^3.3.3",
    "supertest": "^6.1.6",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "2.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.22.0"
  },
  "engines": {
    "node": ">=20.18.1"
  },
  "engineStrict": true
}
